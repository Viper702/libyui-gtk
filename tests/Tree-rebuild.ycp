		   );

    any id = nil;

    repeat
	{
	    id = UI::UserInput();

		any item = UI::QueryWidget (`tree, `CurrentItem);

		UI::ChangeWidget( `id( `label ), `Value, sformat( "%1", item ) );


		UI::ChangeWidget (`tree, `Items, ( [
